#!perl
# PODNAME: oberthian
# ABSTRACT: Oberth prototype script

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

sub main {
	if( @ARGV && $ARGV[0] eq 'bootstrap' ) {
		require Oberth::Prototype::Command::Bootstrap;
		Oberth::Prototype::Command::Bootstrap->new->run;
	} else {
		require Oberth::Prototype;
		Oberth::Prototype->new_with_options->run;
	}
}

main;
